{
  "version": "0.0.2",
  "license": "MIT",
  "main": "dist/index.js",
  "bin": {
    "hd": "bin/index.js"
  },
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "dev": "node bin/index.js --platform gitlab"
  },
  "peerDependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "@haitaodesign/cli",
  "author": "李海涛",
  "module": "dist/cli.esm.js",
  "size-limit": [
    {
      "path": "dist/cli.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/cli.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.9.2",
    "husky": "^4.3.8",
    "size-limit": "^4.9.2",
    "tsdx": "^0.14.1",
    "tslib": "^2.1.0",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "@types/shelljs": "^0.8.8",
    "arg": "^5.0.0",
    "shelljs": "^0.8.5"
  }
}
